<div>
  <div>
    <h1>
      Album invitation #<%= @the_album_invitation.id %> details
    </h1>

    <div>
      <div>
        <a href="/album_invitations">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_album_invitation/<%= @the_album_invitation.id %>">
          Delete album invitation
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_album_invitation.owner_id %>
      </dd>

      <dt>
        Member
      </dt>
      <dd>
        <%= @the_album_invitation.member_id %>
      </dd>

      <dt>
        Album
      </dt>
      <dd>
        <%= @the_album_invitation.album_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album_invitation.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album_invitation.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit album invitation
    </h2>

    <form action="/modify_album_invitation/<%= @the_album_invitation.id %>"  method="post" >
      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_album_invitation.owner_id %>">
      </div>

      <div>
        <label for="member_id_box">
          Member
        </label>

        <input type="text" id="member_id_box" name="query_member_id" value="<%= @the_album_invitation.member_id %>">
      </div>

      <div>
        <label for="album_id_box">
          Album
        </label>

        <input type="text" id="album_id_box" name="query_album_id" value="<%= @the_album_invitation.album_id %>">
      </div>

      <button>
        Update album invitation
      </button>
    </form>
  </div>
</div>

<hr>

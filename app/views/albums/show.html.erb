<div>
  <div>
    <h1>
      <%= @the_album.title %>
    </h1>

    <div>
      <div>
        <a href="/users/<%= @the_album.owner.username%>">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_album/<%= @the_album.id %>">
          Delete album
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Album owner
      </dt>
      <dd>
        <%= @the_album.owner.username %>
      </dd>

      <dt>
        Title
      </dt>
      <dd>
        <%= @the_album.title %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_album.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <% if @the_album.owner.id == @current_user.id %>
      <h2>
        Edit album
      </h2>

      <form action="/modify_album/<%= @the_album.id %>"  method="post" >

        <div>
          <label for="title_box">
            Title
          </label>

          <input type="text" id="title_box" name="query_title" value="<%= @the_album.title %>">
        </div>

        <button>
          Update title
        </button>
      </form>
    
    <hr>
    <% end %>

    <h2>Add photo</h2>
    <form action="/insert_photo/"  method="post" >
      
      <input type="hidden" id="user_box" name="query_album_id" value="<%= @the_album.id %>">
      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption" rows="3" placeholder="Enter a caption...">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" placeholder="Link your photo...">
      </div>


      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location" placeholder="Add a location...">
      </div>

      <button>
        Add photo
      </button>
    </form>

  </div>
</div>

<hr>
